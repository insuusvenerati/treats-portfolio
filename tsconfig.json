{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "preserve",
    "lib": [
      "dom",
      "esnext"
    ],
    "strict": false,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "public",
    ".cache",
    "cypress/**/*"
  ],
  "include": [
    "src/**/*",
    ".eslintrc.js",
    "cypress/**/*",
    "gatsby-config.js",
    "apollo.config.js",
    "__generated__/gatsby-types.d.ts"
  ]
}
